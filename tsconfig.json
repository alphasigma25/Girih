{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./build",
    "allowJs": false,
    "noEmitOnError": true,
    "target": "ES6",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true
  },
  "include": ["./src/**/*"]
}